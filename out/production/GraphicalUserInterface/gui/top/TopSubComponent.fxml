<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TitledPane fx:id="sheetNameTitledPane" focusTraversable="false" styleClass="top-titled-pane" stylesheets="@TopSubComponent.css" text="Sheet Name and Version" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.top.TopSubComponentController">
   <content>
      <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="100.0" vbarPolicy="NEVER">
         <content>
            <VBox alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" minHeight="150.0" minWidth="-Infinity" spacing="5.0" styleClass="vbox">
               <children>
                  <HBox alignment="CENTER" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" VBox.vgrow="NEVER">
                     <children>
                        <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onLoadXMLPressed" prefHeight="35.0" prefWidth="110.0" text="Load XML File" HBox.hgrow="NEVER">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <TextField fx:id="filePathTextField" editable="false" focusTraversable="false" minHeight="-Infinity" minWidth="-Infinity" text="file\path\to\my\file.xml" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="Arial Italic" size="14.0" />
                           </font>
                        </TextField>
                        <MenuButton fx:id="themeMenuButton" mnemonicParsing="false" text="Light Mode">
                           <items>
                              <CheckMenuItem mnemonicParsing="false" onAction="#onThemeChanged" styleClass="active-menu-item" text="LIght Mode" />
                              <CheckMenuItem mnemonicParsing="false" onAction="#onThemeChanged" text="Dark Mode" />
                           </items>
                           <tooltip>
                              <Tooltip text="Select Theme" />
                           </tooltip>
                        </MenuButton>
                     </children>
                     <padding>
                        <Insets left="10.0" right="20.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0" VBox.vgrow="NEVER">
                     <children>
                        <fx:include fx:id="actionLine" source="../action/line/ActionLine.fxml" HBox.hgrow="ALWAYS" />
                        <MenuButton fx:id="currentVersionMenuButton" mnemonicParsing="false" onMouseClicked="#onVersionMenuClicked" text="Current Version" HBox.hgrow="NEVER">
                           <tooltip>
                              <Tooltip text="Select Sheet Version" />
                           </tooltip>
                        </MenuButton>
                     </children>
                     <padding>
                        <Insets left="10.0" right="20.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </content>
   <padding>
      <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
   </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</TitledPane>
