<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15" stylesheets="@style/FileUpload.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.gui.editor.file.upload.FileUploadController">

    <!-- Instruction Label -->
    <Label styleClass="loading-label" text="Loading..." wrapText="true">
        <font>
            <Font name="Arial" size="5.0" />
        </font>
    </Label>

    <!-- Status Label (optional) -->
    <Label id="percent-label" fx:id="progressPercentLabel" wrapText="true">
        <font>
            <Font name="Arial" size="14" />
        </font>
    </Label>

    <!-- Progress Bar -->
    <ProgressBar fx:id="progressBar" prefHeight="20" prefWidth="350" />
    <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Button>

    <!-- Padding for spacing -->
    <VBox.margin>
        <Insets bottom="15" left="15" right="15" top="15" />
    </VBox.margin>

</VBox>
