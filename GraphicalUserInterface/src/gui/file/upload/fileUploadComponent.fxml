<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="400" spacing="15" style="-fx-border-radius: 10; -fx-border-color: #0078d7; -fx-border-width: 2;" stylesheets="@FileUpload.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.file.upload.FileUploadController">

                <!-- Instruction Label -->
    <Label styleClass="loading-label" text="Loading..." wrapText="true">
        <font>
            <Font name="Arial" size="5.0" />
        </font>
    </Label>

    <!-- Status Label (optional) -->
    <Label fx:id="progressPercentLabel" style="-fx-text-fill: #0078d7;" wrapText="true">
        <font>
            <Font name="Arial" size="14" />
        </font>
    </Label>

    <!-- Progress Bar -->
    <ProgressBar fx:id="progressBar" prefHeight="20" prefWidth="350" />

    <!-- Cancel Button -->
    <Button fx:id="cancelButton" prefWidth="100" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 5;" text="Cancel" />

    <!-- Padding for spacing -->
    <VBox.margin>
        <Insets bottom="15" left="15" right="15" top="15" />
    </VBox.margin>

</VBox>
